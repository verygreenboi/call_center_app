<div class="authform">
	<h2><%= t "devise.invitations.new.header" %></h2>

	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :role => 'form'} do |f| %>
	  <%= devise_error_messages! %>

	<% resource.class.invite_key_fields.each do |field| -%>
		<div class="form-group">
		  <p><%= f.label field %><br />
		  <%= f.text_field field, :autofocus => true, class: 'form-control' %></p>
	  </div>
	<% end -%>

	  <p><%= f.submit t("devise.invitations.new.submit_button"), :class => 'button' %></p>
	<% end %>
</div>